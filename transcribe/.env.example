# Конфигурация для системы транскрибации
# Копировать в .env и заполнить своими значениями

# Hugging Face Token для доступа к моделям (pyannote и др.)
HF_TOKEN=

# Путь к FFmpeg (для Windows)
FFMPEG_BIN=C:\Tools\ffmpeg-8.0.1-full_build-shared\bin

# Параметры обработки аудио
CHUNK_SEC=20.0
OVERLAP_SEC=1.0
AUDIO_SAMPLE_RATE=16000

# Параметры сегментации текста
MIN_PAUSE_SEC=60
MAX_BLOCK_DURATION_SEC=600

# Параметры диаризации спикеров
MIN_SEGMENT_DURATION_SEC=0.8
DEFAULT_NUM_SPEAKERS=2

# Уровень логирования (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

